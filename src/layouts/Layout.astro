---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';

// Declare the Props interface
interface Props {
  description: string;
  title: string;
}

// Extract props from Astro
const { description, title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" x-cloak x-data="{ dark: $store.theme.isDark }">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body class="bg-primary-50 text-primary-950 dark:bg-primary-950 dark:text-primary-200 antialiased transition">
    <!-- Header Component -->
    <Header />

    <!-- Main Content Area -->
    <main>
      <slot />
    </main>

    <!-- Footer Component -->
    <Footer />

    <!-- Global Styles -->
    <style is:global>
      /* Hide elements with x-cloak attribute */
      [x-cloak] {
        display: none !important;
      }

      /* Light Theme Colors */
      :root {
        --primary-bg: #ffffff; /* Pure White */
        --primary-text: #127780; /* Deep Teal */
        --secondary-bg: #15eda3; /* Vibrant Green */
        --secondary-text: #0fc083; /* Bold Turquoise */
      }

      /* Dark Theme Colors */
      [x-cloak].dark {
        --primary-bg: #0c4d53; /* Deep Space Green-Blue */
        --primary-text: #ffffff; /* Pure White */
        --secondary-bg: #2cffb7; /* Luminous Aqua */
        --secondary-text: #30c6d3; /* Cool Ocean Blue */
      }

      /* Global Body Styles */
      body {
        background-color: var(--primary-bg);
        color: var(--primary-text);
        font-family: 'Radnika Next', sans-serif;
      }

      /* Header and Footer Styles */
      header, footer {
        background-color: var(--secondary-bg);
        color: var(--secondary-text);
      }

      /* Button Styles */
      .button {
        background-color: var(--secondary-bg);
        color: var(--primary-bg);
      }
    </style>

    <!-- Alpine.js and Collapse Plugin -->
    <script type="module">
      import Alpine from 'https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.min.js';
      import collapse from 'https://cdn.jsdelivr.net/npm/@alpinejs/collapse@2.8.2/dist/collapse.min.js';

      // Activate Collapse plugin
      Alpine.plugin(collapse);

      // Store for managing dark mode toggle
      Alpine.store('theme', {
        init() {
          this.isDark = (() => {
            // Check localStorage or system preferences for dark mode
            if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
              return localStorage.getItem('theme') === 'dark';
            }
            if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
              return true;
            }
            return false;
          })();
        },

        isDark: false,

        // Toggle dark/light mode
        toggle() {
          this.isDark = !this.isDark;
          localStorage.setItem('theme', this.isDark ? 'dark' : 'light');
        },
      });

      // Initialize Alpine.js
      window.Alpine = Alpine;
      Alpine.start();
    </script>
  </body>
</html>

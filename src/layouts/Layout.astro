---
import { LayoutProps } from '../types';

const { children } = LayoutProps;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Alpine.js Example</title>

  <!-- Alpine.js CDN -->
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.1/dist/cdn.min.js"></script>
  
  <script>
    // Alpine.js initialization event listener
    document.addEventListener('alpine:initialized', () => {
      console.log('Alpine initialized');
    });
  </script>
</head>

<body>
  <!-- Example Button with No Alpine Context -->
  <button x-on:click="console.log('no-data')">no-data</button>

  <!-- Alpine Component with x-data -->
  <div x-data="{}">
    <button x-on:click="console.log('x-data')">x-data</button>
  </div>

  <!-- Inject content passed to layout -->
  <div>{children}</div>
</body>
</html>

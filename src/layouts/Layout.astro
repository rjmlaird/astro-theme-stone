---
import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';

const { description = "Default description", title = "Default title" } = Astro.props;
---

<!-- Alpine.js Core -->
<script type="module" src="./node_modules/alpinejs/src/alpine.js" defer></script>

<!-- Alpine.js Plugins -->
<script type="module" src="./node_modules/@alpinejs/collapse/src/index.js" defer></script>
<script type="module" src="./node_modules/@alpinejs/focus/src/index.js" defer></script>
<script type="module" src="./node_modules/@alpinejs/intersect/src/index.js" defer></script>
<script type="module" src="./node_modules/@alpinejs/mask/src/index.js" defer></script>

<!DOCTYPE html>
<html lang="en" x-data="theme">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/icons/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/icons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/icons/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body x-bind:class="{ 'dark': isDark }" class="bg-primary-50 text-primary-950 antialiased transition">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    
    <style is:global>
      [x-cloak] {
        display: none !important;
      }

      /* Light Theme Colors */
      :root {
        --primary-bg: #ffffff;
        --primary-text: #127780;
        --secondary-bg: #15eda3;
        --secondary-text: #0fc083;
      }

      /* Dark Theme Colors */
      .dark {
        --primary-bg: #0c4d53;
        --primary-text: #ffffff;
        --secondary-bg: #2cffb7;
        --secondary-text: #30c6d3;
      }

      /* Global Styles */
      body {
        background-color: var(--primary-bg);
        color: var(--primary-text);
        font-family: 'Radnika Next', sans-serif;
      }

      header {
        background-color: var(--secondary-bg);
      }

      footer {
        background-color: var(--secondary-bg);
        color: var(--secondary-text);
      }
    </style>

    <!-- Alpine Initialization Script -->
    <script type="module">
      document.addEventListener("DOMContentLoaded", () => {
        if (window.Alpine) {
          window.Alpine.start();
        } else {
          console.error("Alpine.js not loaded");
        }
      });
    </script>

    <!-- View Transitions (native browser support) -->
    <script type="module">
      if ('ViewTransition' in window) {
        document.addEventListener("DOMContentLoaded", () => {
          // Listen for the page transition event
          const body = document.body;
          const transition = new ViewTransition({
            root: body, // apply transition to body
            mode: "default", // set transition mode
          });

          // Start the transition when navigating
          transition.enter();

          // You can customize how transitions work here
        });
      } else {
        console.warn("ViewTransition is not supported in this browser");
      }
    </script>
  </body>
</html>
